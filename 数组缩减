import java.util.Scanner;
public class ArrayReduce{
	 public static void main(String[] args){
	 	int arr[]={1,2,3,4,5};//原来的数组
	 	int arrlen=0;//
	 	do{
	 		System.out.println("是否缩减数组");
	 		Scanner myScanner=new Scanner(System.in);
	 		char c=myScanner.next().charAt(0);//定义一个差热类型的变量用来接受用户的输入
	 		if(c=='y'){//如果用户输入的值为y 那么进行缩减数组
	 			int arrnew[]=new int[arr.length-1];//创建一个比原来数组小一个的数组
	 			for(int i=0;i<arrnew.length;i++){
	 			//把原来数组 的内容拷贝到新数组里去
	 				arrnew[i]=arr[i];
	 			}
	 			arr=arrnew;//让原来数组指向新开辟的数组
	 			//把arrnew数组的长度赋值给arrlen  如果arrlen等于1时说明数组已经缩减到了最后一个元素
	 			//提示不能在缩减了
	 			arrlen=arrnew.length;
	 			if(arrlen==1){
	 				System.out.println("数组的长度是最后一个元素的不能继续缩减了");
	 				break;
	 			}

	 			for(int i=0;i<arr.length;i++){//打印缩减之后的数组
	 				System.out.print(arr[i]+" ");
	 				
	 			}
	 		}else if(c=='n'){//如果用户输入的值为n  那么不进行缩减
	 			System.out.println("不缩减");
	 			break;
	 		}else{//考虑其他情况
	 			System.out.println("输入有误");
	 			break;
	 		}
	 	}while(true);
	}
}
